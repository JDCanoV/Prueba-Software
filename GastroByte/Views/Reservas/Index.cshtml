@model IEnumerable<GastroByte.Dtos.ReservaDto>

@{
    ViewBag.Title = "Index";
}

<h2>Reservas</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Reserva</th>
            <th>Nombre</th>
            <th>Documento</th>
            <th>Correo Electrónico</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Número de Personas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr>
                <td>@reserva.id_reservacion</td>
                <td>@reserva.nombre</td>
                <td>@reserva.documento</td>
                <td>@reserva.email</td>
                <td>@reserva.fecha</td>
                <td>@reserva.hora</td>
                <td>@reserva.numero_personas</td>
                <td>
                    <a href="@Url.Action("Edit", "Reservas", new { id = reserva.id_reservacion })" class="btn btn-primary">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
