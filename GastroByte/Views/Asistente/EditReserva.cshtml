@model GastroByte.Dtos.ReservaDto

@{
    ViewBag.Title = "Editar Reserva";
    Layout = "~/Views/Shared/_Layout_asistente.cshtml";
}

<h2>Editar Reserva</h2>

@using (Html.BeginForm("EditReserva", "Asistente", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id_reservacion)

    <div class="form-group">
        @Html.LabelFor(m => m.documento)
        @Html.TextBoxFor(m => m.documento, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.documento)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.nombre)
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.nombre)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.email)
        @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.email)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.fecha)
        @Html.TextBoxFor(m => m.fecha, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.fecha)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.hora)
        @Html.TextBoxFor(m => m.hora, new { @class = "form-control", type = "time" })
        @Html.ValidationMessageFor(m => m.hora)
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a href="@Url.Action("IndexReservas", "Asistente")" class="btn btn-secondary">Cancelar</a>
}
